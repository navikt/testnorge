<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProfile name="test">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>
                    %d{HH:mm:ss.SSS} | %5p | %logger{25} | %m%n
                </pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <logger name="no.nav.testnav.libs.reactivecore.filter.RequestLogger">
        <level value="TRACE"/>
    </logger>

    <logger name="no.nav.testnav.apps.brukerservice.controller.BrukerController">
        <level value="TRACE"/>
    </logger>
</configuration>
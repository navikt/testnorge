<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProfile name="local">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>
                    %d{HH:mm:ss.SSS} | %5p | %logger{25} | %m%n
                </pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    <logger name="no.nav.registre.testnorge.libs.logging.LogRequestInterceptor">
        <level value="TRACE"/>
    </logger>
    <logger name="no.nav.registre.testnorge.arbeidsforhold.consumer.commnad.SaveOpplysningspliktigCommand">
        <level value="TRACE"/>
    </logger>
</configuration>
<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProfile name="prod">
        <appender name="stdout_json" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"log_type":"default"}</customFields>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="stdout_json"/>
        </root>
        <logger name="no.nav.registre.testnorge.common.log.RequestLog">
            <level value="TRACE" />
        </logger>
        <logger name="no.nav.registre.testnorge.common.log.ResponseLog">
            <level value="TRACE" />
        </logger>
    </springProfile>

    <springProfile name="dev">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>
                    %d{HH:mm:ss.SSS} | %5p | %logger{25} | %m%n
                </pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <logger name="no.nav.registre.testnorge.common.log.RequestLog">
        <level value="TRACE" />
    </logger>
    <logger name="no.nav.registre.testnorge.common.log.ResponseLog">
        <level value="TRACE" />
    </logger>
</configuration>